{
  "name": "fanger",
  "version": "0.0.0",
  "description": "Defang and refang IoC",
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "defang": "./dist/bin/defang.js",
    "refang": "./dist/bin/refang.js"
  },
  "files": [
    "dist"
  ],
  "tsup": {
    "format": [
      "cjs",
      "esm"
    ],
    "entry": [
      "src"
    ],
    "dts": true,
    "clean": true
  },
  "scripts": {
    "build": "tsup",
    "watch": "npm run build -- --watch src",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src spec --fix",
    "format": "prettier --write src spec",
    "prepack": "npm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ninoseki/fanger.git"
  },
  "author": "Manabu Niseki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ninoseki/fanger/issues"
  },
  "homepage": "https://github.com/ninoseki/fanger#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@types/eslint__js": "^9.14.0",
    "@types/get-stdin": "^7.0.0",
    "@types/node": "22.17.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "coveralls": "3.1.1",
    "eslint": "^9.34.0",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "escape-string-regexp": "^5.0.0",
    "get-stdin": "^9.0.0",
    "ioc-extractor": "^8.0.0",
    "tlds": "^1.260.0"
  }
}
